@model IEnumerable<Digigarage.BusinessEntities.MechanicViewModel>

@{ ViewBag.Title = "Index"; }

<h3 style="font-family:Georgia, 'Times New Roman', Times, serif; ">Mechanics Details</h3>
<br />

<p>
    <a href="@Url.Action("Create","Mechanics")" class="btn btn-glow-secondary"><i class="fa fa-plus"></i>  Add New Mechanic</a>
</p>

<table class="table table-striped">
    <thead style="background-color : #355070; color:white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.Department1)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody  style="color : black; font-size: medium;">
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MobileNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EmailId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Brand)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Department.Department1)
    </td>
    <td>
        <a href="@Url.Action("Edit","Mechanics", new { id = item.MechanicId})" class="btn" style="background-color:#023e8a; color:white; padding: 3px 4px;"><i class="fa fa-edit"></i>Edit</a>
        <a href="@Url.Action("Details","Mechanics", new { id = item.MechanicId})" class="btn" style="background-color:#2d6a4f; color:white; padding: 3px 5px;"><i class="fa fa-edit"></i>Details</a>
    </td>
</tr>
}
    </tbody>
</table>
