        </tr>

    </thead>
</table>
<p>
    <a href="@Url.Action("Edit","Booking", new { id = Model.BookingId})" class="btn" style="background-color:#f48c06; color:white; padding: 3px 4px; margin-left:35%;"><i class="fa fa-edit"></i>Edit</a>
