@model BusinessEntities.LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<body>
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto my-4">
            <div class="card my-5 shadow" style="border-radius:25px;">
                <div class="card-body p-5" style="background-color:cadetblue;">
                    <h1 style="text-align:center; color:white;">Login</h1>

                    <div class="row">
                        <div class="col-md-12">
                            <form method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label style="color: white;" asp-for="Emailid"></label>
                                    <input asp-for="Emailid" class="form-control" placeholder="Enter Email ID" />
                                    <span asp-validation-for="Emailid" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label style="color: white;" asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                @*<div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                                        <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                                    </div>

                                </div>*@
                                <div class="form-group" style="margin-left:40%;">
                                    <button type="submit" class="btn-danger btn-lg">Login</button>
                                </div>
                                <div  class="form-group"  style="margin-left:10%; margin-top:3%;">
                                    <h5 style="color:white;">New Account? <a style="color:white; font-size:24px;" asp-controller="Account" asp-action="SignUp"> Register Now</a></h5>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

