@model ProductManagement.Context.tbl_Users
@{
    ViewBag.Title = "Login";
}

<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        .form-horizontal {
            justify-content: center;
            margin-left: auto;
            margin-right: auto;
            margin-left: 15%;
            width: 100%
        }

        .jumbotron {
            justify-content: center;
            margin-left: auto;
            margin-right: auto;
            max-width: 65%;
            color: white;
            margin-top: 40px;
            background-color: #3c6e71;
            @*#2a3843;*@
        }

        .col-md-10 {
            width: 50%;
        }

        .mybtn {
            border: 2px solid;
            border-color: white;
            outline: none;
            height: 50px;
            width: 100%;
            background-color: darkslategrey;
            color: white;
            border-radius: 4px;
            font-weight: bold;
        }

            .mybtn:hover {
                background-color: #6b9080;
                border: 2px solid white;
                color: white;
            }

        .a {
            color: white;
            text-decoration: underline;
        }
    </style>
</head>

@using (Html.BeginForm("IsValidUser", "Login", FormMethod.Post))
{
<div class="container">
    <h2 class="text-center" style="color:black;">Login Here</h2>
    <div class="jumbotron">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.User_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.User_Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.User_Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(x => x.User_Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.User_Password, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin-top: 20px;">
                    <input type="submit" value="Login" class="mybtn mt-3 mb-5" />
                </div>
            </div>
            <p style="margin-left:140px; font-size : 15px;">New Account?  <a href="@Url.Action("Users","User")" class="a">Register here</a></p>
        </div>
    </div>
</div>
}

@section scripts{
    <script>

        $(function () {
            var successMsg ='@TempData["successMsg"]';
            if (successMsg != '') {

                alertify.alert(successMsg);
            }
        });
    </script>

}
