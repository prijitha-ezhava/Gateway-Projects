<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--Bootstrap link for Icons-->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" />

    <!-- CSS for Alert Dialog Box-->
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />

    <!-- Vehicle List CSS Links -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedcolumns/3.3.2/css/fixedColumns.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.6/css/responsive.dataTables.min.css">
    <!-- Vehicle List CSS Links -->

    <!--CSS for Footer-->
    <style>
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            padding: 15px;
            width: 100%;
            background-color: #000100;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand" style="color:white"><i class="fa fa-cube"></i>  Vehicle Services</a>
            </div>
            <div class="navbar-collapse collapse">

                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOut", "Customer", FormMethod.Post, new { id = "SignOut", @class = "ml-auto" }))
                    {
                        @Html.AntiForgeryToken()
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item">
                                <a style="color:white;" class="nav-link text-white" href="javascript:document.getElementById('SignOut').submit()"><i class="fa fa-power-off"></i> SignOut</a>
                            </li>
                        </ul>
                    }
                }
            </div>
        </div>
    </div>

    @RenderBody()

    <div class="footer">
        <div class="container body-content">
            <p>&copy; @DateTime.Now.Year - Designed and Developed by | Prijitha Ezhava</p>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/alertify.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- Vehicle List JS Links -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/fixedcolumns/3.3.2/js/dataTables.fixedColumns.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.6/js/dataTables.responsive.min.js"></script>
    <!-- Vehicle List JS Links -->
    <!-- Initialize Datatable -->
    <script>
        $(document).ready(function () {
            var table = $('#vehicleIndex').DataTable({
                fixedHeader: true,
                scrollCollapse: true,
                "searching": true,
                "lengthChange": true,
                "paging": true,
                "ordering": true,
                "info": true,
            });
        });
    </script>
    <!-- Initialize Datatable -->
</body>
</html>
