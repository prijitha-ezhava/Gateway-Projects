<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeCRUD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color: black;  font-style: normal;">
            <div class="container">
                <a style="color:white; margin-left:-10%; width:370px; padding-left:0%;" class="navbar-brand" asp-area="" asp-controller="Employee" asp-action="Index">Employee Management</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="width:100%;">
                    <ul class="navbar-nav flex-grow-1" style="width:100%;">
                        <li class="nav-item">
                            <a style=" color: white;" class="nav-link" asp-area="" asp-controller="Employee" asp-action="Index">Employee List</a>
                        </li>
                        @*<li class="nav-item" style="margin-right:0%; color:white;">

                    </li>class="nav-link"*@
                    </ul>

                </div>

            </div>
            <a style=" color: white; margin-right:2%;" asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-out"></i> Logout</a>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:black; color:white; font-style:normal;">
        <div class="container" style="text-align:center;text-decoration-style:solid; font-weight:500;" >
            &copy; 2021 - Developed By Prijitha Ezhava
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
