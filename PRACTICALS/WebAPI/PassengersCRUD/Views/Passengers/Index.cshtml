@model IEnumerable<PassengersCRUD.Models.PassengersViewModel>

@{
    ViewBag.Title = "Index";
}

<br />
<link href="~/Content/Site.css" rel="stylesheet" />
<p>
    <a href="@Url.Action("AddOrUpdate","Passengers")" class="btn btn-default"><i class="fa fa-plus"></i>  Add Passengers</a>
</p>
<table class="table table-striped">
    <thead style="background-color : #1a535c; color:white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                <a href="@Url.Action("AddOrUpdate","Passengers", new { id = item.ID})" class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
                
                <a onclick="Delete(@item.ID)" class="btn btn-danger"><i class="fa fa-trash"></i>  Delete</a>
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(function () {
            var successMsg = '@TempData["SuccessMsg"]'
            if (successMsg != '')
                alertify.success(successMsg);
        });

        function Delete(Id) {
            alertify.confirm('Passengers Management', 'Are you sure you want to delete this record?', function () {
                window.location.href = '@Url.Action("Delete","Passengers")/' + Id;
            }, null);
        }
    </script>
}